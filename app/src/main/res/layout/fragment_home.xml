<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <TextView
        android:id="@+id/text_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- First Rectangle Shadow -->

    <!-- First Rectangle (Main) -->

    <View
        android:id="@+id/firstRectangleShadow"
        android:layout_width="375dp"
        android:layout_height="150dp"
        android:layout_marginTop="93dp"
        android:background="@drawable/rectangle_shadow"
        android:translationX="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/firstRectangle"
        android:layout_width="375dp"
        android:layout_height="150dp"
        android:layout_marginTop="88dp"
        android:background="@drawable/rounded_rectangle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Second Rectangle Shadow -->
    <View
        android:id="@+id/secondRectangleShadow"
        android:layout_width="375dp"
        android:layout_height="150dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/rectangle_shadow"
        android:translationX="6dp"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/firstRectangleShadow" /> <!-- Increased margin for offset -->

    <!-- Second Rectangle (Main) -->
    <View
        android:id="@+id/secondRectangle"
        android:layout_width="375dp"
        android:layout_height="150dp"
        android:background="@drawable/rounded_rectangle"
        app:layout_constraintTop_toBottomOf="@+id/firstRectangle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

    <!-- Third Rectangle Shadow -->
    <View
        android:id="@+id/thirdRectangleShadow"
        android:layout_width="375dp"
        android:layout_height="150dp"
        android:translationX="6dp"
        android:background="@drawable/rectangle_shadow"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintTop_toBottomOf="@+id/secondRectangleShadow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

    <!-- Third Rectangle (Main) -->
    <View
        android:id="@+id/thirdRectangle"
        android:layout_width="375dp"
        android:layout_height="150dp"
        android:background="@drawable/rounded_rectangle"
        app:layout_constraintTop_toBottomOf="@+id/secondRectangle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />
</androidx.constraintlayout.widget.ConstraintLayout>